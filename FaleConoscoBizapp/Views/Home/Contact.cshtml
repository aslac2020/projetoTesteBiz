
@model  FaleConoscoBizapp.Domain.FaleConoscoModel

@{
    ViewBag.Title = "Fale Conosco";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Contact" method="post">
            <div class="form-group">
                <label asp-for="firstName" class="control-label">Nome</label>
                <br />
                @Html.TextBoxFor(model => model.firstname, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label">Sobrenome</label>
                <br />
                @Html.TextBoxFor(model => model.lastname, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group">
                <label asp-for="telephone" class="control-label">Telefone Comercial</label>
                <br />
                @Html.TextBoxFor(model => model.telephone1, new { @class = "form-control", @type = "number" })
            </div>
            <div class="form-group">
                <label asp-for="mobilePhone" class="control-label">Celular</label>
                <br />
                @Html.TextBoxFor(model => model.mobilephone, new { @class = "form-control", @type = "number" })
            </div>
            <div class="form-group">
                <label asp-for="emailAddress1" class="control-label">Email</label>
                <br />
                @Html.TextBoxFor(model => model.emailaddress1, new { @class = "form-control", @type = "email" })
            </div>
            <div class="form-group">
                <label asp-for="companyName" class="control-label">Nome da Empresa</label>
                <br />
                @Html.TextBoxFor(model => model.companyname, new { @class = "form-control", @type = "number" })
            </div>
            <div class="form-group">
                <label asp-for="subject" class="control-label">Assunto</label>
                <br />
                @Html.TextAreaFor(model => model.subject, new { @class = "form-control", @type = "number" })
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



